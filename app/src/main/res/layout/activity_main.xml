<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_name"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Masukan Nama"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/btn_tambah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tambah"
        android:layout_marginTop="8dp"
        android:text="Tambah"
        app:layout_constraintEnd_toEndOf="@id/input_name"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@id/input_name"
        app:layout_constraintTop_toBottomOf="@id/input_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hapus"
        android:layout_marginTop="8dp"
        android:text="hapus"
        app:layout_constraintEnd_toEndOf="@id/btn_tambah"
        app:layout_constraintStart_toStartOf="@id/btn_tambah"
        app:layout_constraintTop_toBottomOf="@id/btn_tambah" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nam"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Masukan nama"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/input_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/input_name"
        app:layout_constraintTop_toBottomOf="@id/btn_update"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update"
        android:layout_marginTop="8dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="@id/btn_hapus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/btn_hapus"
        app:layout_constraintTop_toBottomOf="@id/btn_hapus" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nama"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/edit_nam"
        app:layout_constraintStart_toStartOf="@id/edit_nam"
        app:layout_constraintTop_toBottomOf="@id/edit_nam" />

</androidx.constraintlayout.widget.ConstraintLayout>